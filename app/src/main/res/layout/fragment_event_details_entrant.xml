<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/button_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Close"
            android:src="@drawable/ic_arrow_back"
            android:padding="8dp"
            android:backgroundTint="@color/black"  />

        <ImageView
            android:id="@+id/image_event_poster"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_event"
            android:layout_marginBottom="16dp" />


        <TextView
            android:id="@+id/text_event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Title"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />


        <TextView
            android:id="@+id/text_event_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Short description of the event..."
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />


        <TextView
            android:id="@+id/text_reg_dates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registration: Start - End"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />


        <TextView
            android:id="@+id/text_capacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Capacity: 0"
            android:textSize="16sp"
            android:layout_marginBottom="24dp" />


        <Button
            android:id="@+id/button_join_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:text="Join Event"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>

