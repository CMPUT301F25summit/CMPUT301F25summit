<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Run Lottery"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Randomly select winners from the waiting list"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="24dp" />

        <!-- Waiting List Count -->
        <TextView
            android:id="@+id/text_view_waiting_list_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading waiting list..."
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Number of Winners Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of Winners:"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edit_text_number_of_winners"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter number of winners"
            android:inputType="number"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Run Lottery Button -->
        <Button
            android:id="@+id/button_run_lottery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Run Lottery"
            android:textSize="18sp"
            android:padding="16dp"
            android:enabled="false"
            android:layout_marginBottom="24dp" />

        <!-- Loading Indicator -->
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:visibility="gone" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Winners Section -->
        <TextView
            android:id="@+id/text_view_winners_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selected Winners:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <ListView
            android:id="@+id/list_view_winners"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"
            android:minHeight="200dp"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>