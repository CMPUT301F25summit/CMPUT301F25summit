<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/edit_event_poster"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_event"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/button_change_poster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Poster"
            android:layout_marginBottom="24dp" />

        <EditText
            android:id="@+id/edit_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Event Title"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/edit_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/edit_capacity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Capacity"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/edit_registration_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Registration Start"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/edit_registration_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Registration End"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/button_save_changes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Changes" />

    </LinearLayout>

</ScrollView>
