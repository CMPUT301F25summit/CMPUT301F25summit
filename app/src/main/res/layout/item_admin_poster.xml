<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/posterImageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:contentDescription="Event poster thumbnail"
            android:background="@color/cardview_light_background" />

        <LinearLayout
            android:id="@+id/posterInfoContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/posterImageView"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="?attr/colorSurface">

            <TextView
                android:id="@+id/eventTitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Title"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/organizerNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Organizer Name"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/deleteButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_margin="8dp"
            android:background="@drawable/circle_button_background"
            android:src="@android:drawable/ic_menu_delete"
            android:contentDescription="Delete poster"
            android:padding="8dp"
            android:tint="@android:color/white"
            android:elevation="4dp" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>
