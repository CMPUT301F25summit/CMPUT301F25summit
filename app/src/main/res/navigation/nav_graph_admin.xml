<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_admin"
    app:startDestination="@id/adminEventsFragment">

    <fragment
        android:id="@+id/adminEventsFragment"
        android:name="com.example.summit.fragments.admin.AdminEventsFragment"
        android:label="Events"
        tools:layout="@layout/fragment_admin_events"/>

    <fragment
        android:id="@+id/adminUserProfilesFragment"
        android:name="com.example.summit.fragments.admin.AdminUserProfilesFragment"
        android:label="User Profiles"
        tools:layout="@layout/fragment_admin_user_profiles"/>

    <fragment
        android:id="@+id/adminImageSettingsFragment"
        android:name="com.example.summit.fragments.admin.AdminImageSettingsFragment"
        android:label="Image Settings"
        tools:layout="@layout/fragment_admin_image_settings"/>

    <fragment
        android:id="@+id/adminOrganizersFragment"
        android:name="com.example.summit.fragments.admin.AdminOrganizersFragment"
        android:label="Organizers"
        tools:layout="@layout/fragment_admin_organizers">
        <action
            android:id="@+id/action_adminOrganizersFragment_to_organizerNotificationHubFragment"
            app:destination="@id/organizerNotificationHubFragment" />
        <action
            android:id="@+id/action_adminOrganizersFragment_to_adminProfileViewFragment"
            app:destination="@id/adminProfileViewFragment" />
    </fragment>

    <fragment
        android:id="@+id/adminNotificationsFragment"
        android:name="com.example.summit.fragments.admin.AdminNotificationsFragment"
        android:label="Notifications"
        tools:layout="@layout/fragment_admin_notifications"/>

    <fragment
        android:id="@+id/organizerNotificationHubFragment"
        android:name="com.example.summit.fragments.admin.OrganizerNotificationHubFragment"
        android:label="Notification Log"
        tools:layout="@layout/fragment_organizer_notification_hub">
        <argument
            android:name="organizer_id"
            app:argType="string" />
    </fragment>



    <fragment
        android:id="@+id/adminProfileViewFragment"
        android:name="com.example.summit.fragments.admin.AdminProfileViewFragment"
        android:label="User Profile"
        tools:layout="@layout/fragment_admin_profile_view">
        <argument
            android:name="user_id"
            app:argType="string" />
        <argument
            android:name="user_role"
            app:argType="string" />
    </fragment>



</navigation>
