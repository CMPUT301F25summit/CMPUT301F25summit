<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_entrant.xml"
    app:startDestination="@id/searchForEventsFragment">

    <fragment
        android:id="@+id/searchForEventsFragment"
        android:name="com.example.summit.fragments.entrant.SearchForEventsFragment"
        android:label="Search For Events"
        tools:layout="@layout/fragment_searchforevents"/>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.summit.fragments.entrant.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile"/>

    <fragment
        android:id="@+id/notificationsFragment"
        android:name="com.example.summit.fragments.entrant.NotificationsFragment"
        android:label="Notifications"
        tools:layout="@layout/fragment_notifications"/>

    <fragment
        android:id="@+id/eventDetailsFragment"
        android:name="com.example.summit.fragments.organizer.EventDetailsFragment"
        android:label="Event Details"
        tools:layout="@layout/fragment_event_details"/>


    <fragment
        android:id="@+id/qrScannerFragment"
        android:name="com.example.summit.fragments.entrant.QRScannerFragment"
        android:label="Scan QR Code"
        tools:layout="@layout/fragment_qr_scanner">


        <action
            android:id="@+id/action_qrScanner_to_eventDetails"
            app:destination="@id/eventDetailsFragment" />
    </fragment>


</navigation>